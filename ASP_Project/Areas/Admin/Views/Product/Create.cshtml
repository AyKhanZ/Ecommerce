@using ASP_Project.Areas.Identity.Data.DbContexts;
@using ASP_Project.Areas.Identity.Data.Models
@inject UserContext _context
@model Product 
@{
	Layout = "_AdminsLayout";
	var categories = _context.Categories.ToList();
}

<form method="post" enctype="multipart/form-data">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Product</h2>
			<hr />
		</div>
		<div class="container">
			<div class="row">
				<div class="col">
					<div class="mb-3">
						<label asp-for="Name"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div> 
					<div class="mb-3">
						<label asp-for="Price"></label>
						<input asp-for="Price" class="form-control" />
						<span asp-validation-for="Price" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Quantity"></label>
						<input asp-for="Quantity" class="form-control" />
						<span asp-validation-for="Quantity" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="InternalMemory"></label>
						<select asp-for="InternalMemory" class="form-select">
							<option value="-1" selected>Select internal memory</option>
							<option value="64 GB">64 GB</option>
							<option value="128 GB">128 GB</option>
							<option value="256 GB">256 GB</option>
							<option value="512 GB">512 GB</option>
							<option value="1 TB">1 TB</option>
						</select>
						<span asp-validation-for="InternalMemory" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="RAM"></label>
						<select asp-for="RAM" class="form-select">
							<option value="-1" selected>Select RAM</option>
							<option value="4 GB">4 GB</option>
							<option value="6 GB">6 GB</option>
							<option value="8 GB">8 GB</option>
						</select>
						<span asp-validation-for="RAM" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Color"></label>
						<select asp-for="Color" class="form-select">
							@foreach (var color in Enum.GetValues(typeof(Color)))
							{
								<option value="@color">@color</option>
							}
						</select>
					</div>
					<div class="mb-3">
						<label asp-for="Producer"></label>
						<select asp-for="Producer" class="form-select">
							<option value="@Producer.Apple" selected>Apple</option>
							@foreach (var producer in Enum.GetValues(typeof(Producer)))
							{
								<option value="@producer">@producer</option>
							}
						</select>
						<span asp-validation-for="Producer" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="ProcessorName">Processor name</label>
						<select asp-for="ProcessorName" class="form-select">
							<option value="@ProcessorName.Apple" selected>Apple</option>
							@foreach (var processorName in Enum.GetValues(typeof(ProcessorName)))
							{
								<option value="@processorName">@processorName</option>
							}
							</select>
						<span asp-validation-for="ProcessorName" class="text-danger"></span>
					</div>
				</div>
				<div class="col">
					<div class="mb-3">
						<label asp-for="OperatingSystemEnum">Operating system</label>
						<select asp-for="OperatingSystemEnum" class="form-select">
							<option value="@OperatingSystemEnum.IOS" selected>IOS</option>
							@foreach (var operatingSystem in Enum.GetValues(typeof(OperatingSystemEnum)))
							{
								<option value="@operatingSystem">@operatingSystem</option>
							}
						</select>
						<span asp-validation-for="OperatingSystemEnum" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="NFC"></label>
						<select asp-for="NFC" class="form-select">
							<option value="@false" selected>No</option> 
							<option value="@true" selected>There are</option> 
						</select>
						<span asp-validation-for="NFC" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="BatteryCapacity"></label> 
						<select asp-for="BatteryCapacity" class="form-select">
							<option value="2018 mAh" selected>2018 mAh</option>
							<option value="2438 mAh">2438 mAh</option>
							<option value="2815 mAh">2815 mAh</option>
							<option value="3110 mAh">3110 mAh</option>
							<option value="3200 mAh">3200 mAh</option>
							<option value="3240 mAh">3240 mAh</option>
							<option value="3279 mAh">3279 mAh</option>
							<option value="4323 mAh">4323 mAh</option>
							<option value="4325 mAh">4325 mAh</option>
							<option value="4352 mAh">4352 mAh</option>
						</select>
						<span asp-validation-for="BatteryCapacity" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="NumberOfSIMCards"></label>
						<input asp-for="NumberOfSIMCards" class="form-control" />
						<span asp-validation-for="NumberOfSIMCards" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="NuclearNumber"></label>
						<input asp-for="NuclearNumber" class="form-control" />
						<span asp-validation-for="NuclearNumber" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Discount"></label>
						<input asp-for="Discount" class="form-control" value="0" />
					</div>
					<div class="mb-3">
						<select asp-for="CategoryId" class="form-select">
							<option value="-1" selected>Select a category</option>
							@foreach (var category in categories)
							{
								<option value="@category.Id">@category.Name</option>
							}
						</select>
						<span asp-validation-for="CategoryId" class="text-danger"></span>
					</div> 
					<div class="container">
						<div class="row">
							<div class="form-group">
								<label asp-for="ProductImages" class="control-label">Images</label>
								<input asp-for="ProductImages" class="form-control" type="file" name="ProductImages" multiple /> <!-- Use 'name="files"' for file input -->
								<span asp-validation-for="ProductImages" class="text-danger"></span>
							</div>
						</div>
						<div class="row my-3 justify-content-evenly">
							<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
							<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
								Back to List
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form> 