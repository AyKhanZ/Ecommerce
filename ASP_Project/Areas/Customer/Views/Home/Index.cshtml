@using ASP_Project.Areas.Identity.Data.Models;
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";

    Pager pager = new Pager();

    int pageNo = 0;

    @if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Home.css">
    <script defer src="https://kit.fontawesome.com/28a2634532.js" crossorigin="anonymous"></script>
</head> 
<body>
    <main> 
        <div class="main-container"> 
            <div class="filters">
                <form class="form-filters" method="get" action="@Url.Action("Index")">
                    <button type="button" class="accordion">Price</button>
                    <div class="panel">
                        <div class="filter-input">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Min/Max</span>
                                </div>
                                <input name="minPrice" type="text" class="form-control" placeholder="0$">
                                <input name="maxPrice" type="text" class="form-control" placeholder="5000$">
                            </div> 
                        </div>
                    </div>
                    <hr/>

                    <button type="button" class="accordion">RAM</button>
                    <div class="panel">
                        <div class="filter-input">
                            <div class="input-group-items"> 
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="ram4">
                                    <label class="custom-control-label" for="ram4">4 RAM</label>
                                </div>
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="ram4">
                                    <label class="custom-control-label" for="ram6">6 RAM</label>
                                </div>
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="ram4">
                                    <label class="custom-control-label" for="ram8">8 RAM</label>
                                </div>
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="ram4">
                                    <label class="custom-control-label" for="ram8">16 RAM</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr/>

                    <button type="button" class="accordion">Internal memory</button>
                    <div class="panel">
                        <div class="filter-input">
                            <div class="input-group-items"> 
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="memory64">
                                    <label class="custom-control-label" for="memory64">64 GB</label>
                                </div>
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="memory128">
                                    <label class="custom-control-label" for="memory128">128 GB</label>
                                </div>
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="memory256">
                                    <label class="custom-control-label" for="memory256">256 GB</label>
                                </div>
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="memory512">
                                    <label class="custom-control-label" for="memory512">512 GB</label>
                                </div>
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input name="minPrice" type="checkbox" class="custom-control-input" id="memory1">
                                    <label class="custom-control-label" for="memory1">1 TB</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr/>
                     
                </form>
            </div>
            <div class="products">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Images</th>
                            <th scope="col">Price</th>
                            <th scope="col">Producer</th>
                            <th scope="col">RAM</th>
                            <th scope="col">Operating system</th>
                            <th scope="col">NFC</th>
                            <th scope="col">SIMs</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in @Model!)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <img class="product-img" src="data:image/jpeg;base64,@Convert.ToBase64String(item.ProductImages.First().ImageData!)" alt="product image">
                                    </td>
                                    <td>@item.Producer</td>
                                    <td>@item.RAM</td>
                                    <td>@item.OperatingSystemEnum</td>
                                    <td>@item.NFC</td>
                                    <td>@item.NumberOfSIMCards</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No products found.</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>  
        </div>
        <div class="container-paggination">
            <div> 
                <form class="form-inline d-flex" method="get" action="@Url.Action("Index")">
                    <input name="searchText" class="form-control mr-sm-2" style="margin-right:1rem;" type="search" placeholder="Search by name" aria-label="Search">
                    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div> 
            @if (pager.TotalPages > 0)
            {
                <ul class="pagination justify-content-end "> 

                    @if (pager.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-pg="1">First</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" 
                            asp-route-pg="@(pager.CurrentPage - 1)">Previus</a>
                        </li>
                    }

                    @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                    {
                        <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-pg="@pge">@pge</a>
                        </li>
                    }

                    @if(pager.CurrentPage < pager.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </main>
    <script src="~/js/Home.js"></script>
</body>    
</html> 